<UserControl x:Class="SccefDecryptor.Views.MetroMessageBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:converters="clr-namespace:SccefDecryptor.Converters"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             lex:LocalizeDictionary.DesignCulture="en"
             lex:ResxLocalizationProvider.DefaultAssembly="SccefDecryptor"
             lex:ResxLocalizationProvider.DefaultDictionary="Strings"
             mc:Ignorable="d" Height="200">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:VisibilityConverter x:Key="VisibilityConverter" />
            <converters:MessageBoxTypeToColor x:Key="MessageBoxTypeToColor" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Width="600" HorizontalAlignment="Center" Padding="10" Style="{DynamicResource ModalDialogStyleBorder}"
            BorderBrush="{Binding MessageBoxType, Converter={StaticResource MessageBoxTypeToColor}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="{Binding Path=Title}" Style="{DynamicResource HeaderLabelStyle}" />
            <TextBlock Grid.Row="1" Text="{Binding Path=Message}" TextWrapping="Wrap" Margin="6,6,0,0"
                       Style="{DynamicResource ModalTextStyle}" />
            <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,10,10" Orientation="Horizontal">
                <Button Width="70" Margin="10,0,0,0" Style="{DynamicResource AccentedSquareButtonStyle}" Cursor="Hand"
                        Background="{Binding MessageBoxType, Converter={StaticResource MessageBoxTypeToColor}}"
                        Visibility="{Binding Path=IsYesButtonVisible, Converter={StaticResource VisibilityConverter}}"
                        cal:Message.Attach="Yes" Content="{lex:Loc Key=button_yes}" />
                <Button Width="70" Margin="10,0,0,0" Style="{DynamicResource AccentedSquareButtonStyle}" Cursor="Hand"
                        Background="{Binding MessageBoxType, Converter={StaticResource MessageBoxTypeToColor}}"
                        Visibility="{Binding Path=IsNoButtonVisible, Converter={StaticResource VisibilityConverter}}"
                        cal:Message.Attach="No" Content="{lex:Loc Key=button_no}" />
                <Button Width="70" Margin="10,0,0,0" Style="{DynamicResource AccentedSquareButtonStyle}" Cursor="Hand"
                        Background="{Binding MessageBoxType, Converter={StaticResource MessageBoxTypeToColor}}"
                        Visibility="{Binding Path=IsOkButtonVisible, Converter={StaticResource VisibilityConverter}}"
                        cal:Message.Attach="Ok" Content="{lex:Loc Key=button_ok}" />
                <Button Width="70" Margin="10,0,0,0" IsCancel="True"
                        Style="{DynamicResource AccentedSquareButtonStyle}" Cursor="Hand"
                        Background="{Binding MessageBoxType, Converter={StaticResource MessageBoxTypeToColor}}"
                        Visibility="{Binding Path=IsCancelButtonVisible, Converter={StaticResource VisibilityConverter}}"
                        cal:Message.Attach="Cancel" Content="{lex:Loc Key=button_cancel}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>